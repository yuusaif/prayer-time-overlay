{
  "name": "prayer-time-overlay",
  "version": "1.0.0",
  "description": "Full-screen prayer time reminder overlay",
  "main": "main.js",
  "scripts": {
    "start": "electron . --no-sandbox",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "keywords": [
    "prayer",
    "reminder",
    "overlay"
  ],
  "author": {
    "name": "Md. Saif Alvi",
    "email": "alvi676@gmail.com"
  },
  "license": "",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.prayertime.overlay",
    "productName": "prayer-time-overlay",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "src/**/*",
      "prayer-times.json"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "src/assets/icon.png",
      "sign": false,
      "signingHashAlgorithms": []
    },
    "mac": {
      "target": [
        "zip"
      ],
      "icon": "src/assets/icon.png",
      "category": "public.app-category.utilities"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "src/assets/icon.png",
      "category": "Utility",
      "executableName": "prayer-time-overlay",
      "desktop": {
        "Name": "Prayer Time Overlay",
        "Comment": "Full-screen prayer time reminder overlay"
      }
    }
  }
}